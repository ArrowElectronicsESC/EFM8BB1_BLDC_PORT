                  SLR_pwm_duty = C0;
                  PCA_change_duty_cycle(SLR_pwm_duty);
              
                  twait0 = SL_MTR_time();
                  twait = twait0;
                  while((twait - twait0) < 5000)
                  {
                      twait = SL_MTR_time();
                      PT_YIELD(&mcp_tune);
                  }
              
                  // start pid tuning.
