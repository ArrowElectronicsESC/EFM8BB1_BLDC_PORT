                  SLR_pwm_duty = C0;
                  PCA_change_duty_cycle(SLR_pwm_duty);
              
                  twait0 = SL_MTR_time();
                  twait = twait0;
                  while((twait - twait0) < 5000)
                  {
                      twait = SL_MTR_time();
                      PT_YIELD(&mcp_tune);
                  }
              
                  // start pid tuning.
                  // save initial speed.
                  Y0 = MCP_get_16bit_register(MCP_REG_PRESENT_MOTOR_SPEED);
                  tune_cnt = 0;
                  dec = 1;
                  half_pu = 0L;
                  max_speed = 0;
