              static U8 APP_tune_callback(U16 pwm, U16 disp)
              {
                  bit event = 0;
                  C0 = pwm;
                  tune_disp = disp;
              
                  tune_in_progress = 1;
                  PT_BEGIN(&mcp_tune);
              
                  // wait until motor started...
                  PT_WAIT_UNTIL(&mcp_tune, (MOTOR_RUNNING == SLR_motor_state));
              
                  // motor started. wait stable running
